@page
@model MaestusHospital.Pages.Appointments.CreateModel

@{
    ViewData["Title"] = "Schedule New Appointment";
}

<h1>Schedule New Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.DoctorId" class="control-label">Doctor</label>
                <select asp-for="Appointment.DoctorId" class="form-control" asp-items="Model.Doctors"></select>
                <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.PatientId" class="control-label">Patient</label>
                <select asp-for="Appointment.PatientId" class="form-control" asp-items="Model.Patients"></select>
                <span asp-validation-for="Appointment.PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Reason" class="control-label"></label>
                <input asp-for="Appointment.Reason" class="form-control" />
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <input asp-for="Appointment.Status" class="form-control" />
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>