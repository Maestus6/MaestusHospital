@page
@model MaestusHospital.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Doctors";
}

<h1>Doctors</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
